model User {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String
  tasks    Task[]
}

model Task {
  id        String   @id @default(uuid())
  title     String
  completed Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
